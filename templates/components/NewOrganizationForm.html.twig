<div{{ attributes }}>
    <form
            data-action="live#action:prevent"
            data-live-action-param="saveOrganization"
    >
        <div class="row align-items-center">
            <div class="col-3">
                <label for="organization-name">Organization name:</label>
            </div>
            <div class="col-6">
                <input
                        type="text"
                        data-model="name"
                        class="form-control {{ _errors.has('name') ? 'is-invalid' }}"
                        id="organization-name"
                >
                {% if _errors.has('name') %}
                    <div class="invalid-feedback">
                        {{ _errors.get('name') }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row align-items-center mt-3">
            <div class="col-3">
                <label for="organization-presentation">Presentation:</label>
            </div>
            <div class="col-6">
                <textarea
                        data-model="presentation"
                        class="form-control {{ _errors.has('presentation') ? 'is-invalid' }}"
                        id="organization-presentation"
                ></textarea>
                {% if _errors.has('presentation') %}
                    <div class="invalid-feedback">
                        {{ _errors.get('presentation') }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Organization</button>
        </div>
    </form>

</div>
